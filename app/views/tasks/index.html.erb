<h1>My Tasks</h1>

<%= link_to 'Add new task', new_task_path %>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= link_to task.title, task_path(task) %>
      <%= link_to 'Delete',
                  task_path(task),
                  method: :delete,
                  class: 'btn btn-danger',
                  data: { confirm: "Are you sure ?" } %>
    </li>
  <% end %>
</ul>
